<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>To Do</h1>
  <p>A Site To List Important Tasks</p>
</div>

<table class="table table-condensed table-striped table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New To Do', new_todo_item_path, class: "link" %>
